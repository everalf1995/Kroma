<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_dialog"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/linear_layout_NT" >

    <TextView
        android:id="@+id/text_view_importance_NT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/relevance"
        android:textColor="?attr/colorAccent"
        android:textSize="12sp" />

    <RadioGroup
        android:id="@+id/radio_group_relevance_NT"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_button_not_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:checked="true"
            android:textColor="@color/colorTextLight"
            android:text="@string/important_exclamation" />

        <RadioButton
            android:id="@+id/radio_button_somewhat_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:checked="false"
            android:textColor="@color/colorTextLight"
            android:text="@string/important_exclamation" />

        <RadioButton
            android:id="@+id/radio_button_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:checked="false"
            android:textColor="@color/colorTextLight"
            android:text="@string/important_exclamation" />

        <RadioButton
            android:id="@+id/radio_button_very_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:layout_marginEnd="5dp"
            android:textColor="@color/colorTextLight"
            android:text="@string/important_exclamation" />

        <RadioButton
            android:id="@+id/radio_button_really_important"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:textColor="@color/colorTextLight"
            android:text="@string/important_exclamation" />

    </RadioGroup>

</LinearLayout>