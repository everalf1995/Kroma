<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/round_dialog"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:id="@+id/linear_layout_NTC1" >

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_task_name_NTC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp" >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_task_name_NTC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/task_title"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:textSize="16sp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_input_layout_task_description_NTC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/edit_text_task_description_NTC1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:inputType="textCapSentences|textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minLines="3"
            android:textSize="16sp"
            android:gravity="top|start"/>
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/text_view_task_type_NTC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text="@string/task_type"
        android:textColor="?attr/colorAccent"
        android:textSize="12sp" />

    <Spinner
        android:id="@+id/spinner_task_type_NTC1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:popupBackground="@color/colorBackground"
        android:textSize="16sp" />

</LinearLayout>