<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_2"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Landing.LandingActivity"
    android:id="@+id/linear_layout_LA">

    <TextView
        android:id="@+id/text_view_kronikle_LA"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_bold"
        android:shadowColor="?attr/colorPrimary"
        android:shadowDx="-20"
        android:shadowDy="-20"
        android:shadowRadius="1"
        android:text="@string/app_name_upper"
        android:textAlignment="center"
        android:textSize="50sp"
        android:typeface="normal" />

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_LA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorColor="@color/colorTransparent"
        app:tabTextColor="@color/colorBaseLight"
        app:tabSelectedTextColor="@color/colorTextLight"
        app:background="@color/colorTransparent"
        app:tabBackground="@color/colorTransparent" />

    <View
        android:id="@+id/view_divider_LA"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBaseLight" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_LA"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

</LinearLayout>